#!/usr/bin/env bash

file="/var/run/myscript.pid"

# PID file yaradılır
echo "$$" > "$file"

# Signal-lar üçün trap-lar
trap 'echo "I hate the kill command"; rm -f "$file"; exit' SIGTERM
trap 'echo "Y U no love me?!"; exit' SIGINT
trap 'rm -f "$file"; exit' SIGQUIT

# Sonsuz loop
while true
do
    echo "To infinity and beyond"
    sleep 2
done

